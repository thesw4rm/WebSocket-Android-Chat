<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#6894ED" />

            <padding
                android:bottom="4dp"
                android:left="10dp"
                android:right="10dp"
                android:top="4dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#577ac4" />

            <padding
                android:bottom="4dp"
                android:left="10dp"
                android:right="10dp"
                android:top="4dp" />
        </shape>
    </item>
</selector>